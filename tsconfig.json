{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
